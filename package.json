{
  "name": "full-stack-template-2021",
  "version": "1.0.0",
  "description": "Can copy/paste this repo when starting future projects - this is basis of a MERN project w/ routing and a DB",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colinstevens06/full-stack-template-2021.git"
  },
  "keywords": [],
  "author": "Colin Stevens - Drummin' Up Media",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/colinstevens06/full-stack-template-2021/issues"
  },
  "homepage": "https://github.com/colinstevens06/full-stack-template-2021#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "concurrently": "^6.0.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4"
  }
}
